<div class="page-header">
<h1> All of the statuses</h1>
</div>

<%= link_to "New Status", new_status_path, class: "btn btn-default" %>

<% @statuses.each do |status| %>
<div class="status">
  <strong> <%= status.name %> </strong>
  <p> <%= status.content %></p>
  <div class="meta"></div>
  <%= link_to time_ago_in_words(status.created_at), status %>
  <span class="admin" >
    <%= link_to "Edit Post", edit_status_path(status) %>
    <%= link_to "Delete Post", status, method: :delete, data: {confirm: "Are you sure you want to delete the status?"} %>
  </span>
</div>
<% end %>